<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ckb.explorer.mapper.UdtHolderAllocationsMapper">

    <resultMap id="BaseResultMap" type="com.ckb.explorer.entity.UdtHolderAllocations">
            <result property="typeScriptId" column="type_script_id" jdbcType="BIGINT"/>
            <result property="holderCount" column="holder_count" jdbcType="INTEGER"/>
            <result property="lockType" column="lock_type" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,type_script_id,holder_count,
        lock_type
    </sql>

    <resultMap id="addressCount" type="com.ckb.explorer.domain.dto.UdtAddressCountDto">
        <result property="typeScriptId" column="typeScriptId" />
        <result property="addressesCount" column="addressesCount" />
        <result property="h24CkbTransactionsCount" column="h24CkbTransactionsCount" />
    </resultMap>

    <select id="getAddressNum" resultMap="addressCount">
        select uh.type_script_id as typeScriptId ,uh.addressesCount,COALESCE(at.h24CkbTransactionsCount,0) as h24CkbTransactionsCount from
        (select  type_script_id ,
        sum(holder_count) as addressesCount
        from udt_holder_allocations group by type_script_id ) as uh
        left join (select type_script_id, count(distinct  ckb_transaction_id) as h24CkbTransactionsCount
        from address_24h_transaction group by type_script_id ) as at on at.type_script_id = uh.type_script_id
    </select>

</mapper>
